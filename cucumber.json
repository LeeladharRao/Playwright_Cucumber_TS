{
    "default": {
        "tags": "@testtag",
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/test/features/"
        ],
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "dryRun": false,
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "html:target/cucumber-report.html",
            "json:target/cucumber-report.json"
        ]
    }
}